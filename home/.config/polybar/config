[colors]
color0=${xrdb:color0:#000000}
color1=${xrdb:color1:#020202}
color2=${xrdb:color2:#040404}
color3=${xrdb:color3:#080808}
color4=${xrdb:color4:#101010}
color5=${xrdb:color5:#202020}
color6=${xrdb:color6:#400040}
color7=${xrdb:color7:#FFFFFF}
color8=${xrdb:color8:#808080}

background     = ${colors.color0}
background-alt = ${colors.color1}
foreground     = ${colors.color7}
foreground-alt = ${colors.color6}

primary    = ${colors.color5}
secondary  = ${colors.color4}
tertiary   = ${colors.color3}
quaternary = ${colors.color2}

alert = ${colors.color8}

[hardware]
ethernet = enp0s31f6
wireless = wlp3s0

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/common]
monitor-strict = true

enable-ipc = true

width = 100%
height = 24

separator = Óò°

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
underline-size = 2

border-left-size = 5
border-right-size = 5

padding-left = 1
padding-right = 1
module-margin = 1

;wm-restack = i3
;override-redirect = true

font-0 = InputSansNarrow Nerd Font:size=12

[bar/full]
inherit = bar/common

monitor = ${env:MONITOR:DP2-2}

border-top-size = 5

modules-left = i3 compton redshift xwindow
modules-center = mpd
modules-right = cpu temp mem fs lan wlan vol date

tray-position = right
tray-padding = 5

[bar/top]
inherit = bar/common

monitor = ${env:MONITOR:eDP1}

border-top-size = 5

modules-left = i3 compton redshift
modules-center = xwindow
modules-right = vol bat0 bat1 date

tray-position = right
tray-padding = 2

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

[bar/bottom]
inherit = bar/common

monitor = ${env:MONITOR:eDP1}

bottom = true

border-bottom-size = 20

fixed-center = true

modules-left = mpd
modules-center = lan wlan
modules-right = cpu temp mem fs

[module/xwindow]
type = internal/xwindow

[module/fs]
type = internal/fs
interval = 25

mount-0 = /
;mount-1 = /home

format-mounted-prefix= "ÔáÄ "
format-mounted-prefix-foreground = ${colors.foreground-alt}

label-mounted = %used% / %free%

format-unmounted-prefix= "ÓúÖ "
format-unmounted-prefix-foreground = ${colors.foreground-alt}

label-unmounted = --%
label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.foreground-alt}
label-mode-background = ${colors.background}

label-focused = %index%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background-alt}
label-focused-overline = ${colors.quaternary}
label-focused-underline = ${colors.quaternary}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = 2

label-urgent = %index%ÔÉß
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-visible = %index%
label-visible-background = ${colors.tertiary}
label-visible-underline = ${colors.secondary}
label-visible-padding = 2}

[module/backlight]
type = internal/xbacklight

format = <label>
format-prefix= "ÔÉ´ "
format-prefix-foreground = ${colors.foreground-alt}

ramp-0 = üåï
ramp-1 = üåî
ramp-2 = üåì
ramp-3 = üåí
ramp-4 = üåë

[module/backlight-acpi]
inherit = module/backlight
card = intel_backlight

[module/vol]
type = custom/script
interval = 5

tail = true
label = %output%
exec = ~/.config/polybar/pavol.sh --listen
#exec-if = pacmd list-sinks | grep -q available
click-right = exec pavucontrol
click-left = ~/.config/polybar/pavol.sh --toggle
scroll-up = ~/.config/polybar/pavol.sh --up
scroll-down = ~/.config/polybar/pavol.sh --down

[module/mpd]
type = internal/mpd

format-online = <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next> Óò° <label-song> Óò° <label-time> Óò° <icon-repeat> <icon-random>
format-playing = ${self.format-online}
format-paused = ${self.format-online}
format-stopped = <icon-prev> <icon-seekb> <icon-stop> <toggle> <icon-seekf> <icon-next> -- <icon-repeat> <icon-random>

;label-song-maxlen = 25
;label-song-ellipsis = true

icon-prev = ÔÅâ
icon-seekb = ÔÅä
icon-stop = ÔÅç
icon-play = ÔÅã
icon-pause = ÔÅå
icon-next = ÔÅê
icon-seekf = ÔÅé

icon-random = ÔÅ¥
icon-repeat = ÔÅπ

toggle-on-foreground = ${colors.foreground}
toggle-off-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu
interval = 5

format = <ramp-coreload>
format-prefix = "ÔÉ§ "
format-prefix-foreground = ${colors.foreground-alt}

ramp-coreload-foreground = ${colors.primary} 

ramp-coreload-0 = ‚ñÅ
ramp-coreload-1 = ‚ñÇ
ramp-coreload-2 = ‚ñÉ
ramp-coreload-3 = ‚ñÑ
ramp-coreload-4 = ‚ñÖ
ramp-coreload-5 = ‚ñÜ
ramp-coreload-6 = ‚ñá
ramp-coreload-7 = ‚ñà

[module/mem]
type = internal/memory
interval = 5

format-prefix = "Óâ¶ "
format-prefix-foreground = ${colors.foreground-alt}
label = %gb_used% / %gb_free%

[module/wlan]
type = internal/network
interval = 5
interface = ${hardware.wireless}

format-connected-prefix = "ÔÇû "
format-connected-prefix-foreground = ${colors.foreground-alt}

label-connected = %local_ip% (%essid%)

format-disconnected-prefix = "Ôëß "
format-disconnected-prefix-foreground = ${colors.foreground-alt}

label-disconnected = -.-.-.-
label-disconnected-foreground = ${colors.foreground-alt}

[module/lan]
type = internal/network
interval = 5
interface = ${hardware.ethernet}

format-connected-prefix = "ÔÉ® "
format-connected-prefix-foreground = ${colors.foreground-alt}

label-connected = %local_ip% (%linkspeed%)

format-disconnected-prefix = "Ôëß "
format-disconnected-prefix-foreground = ${colors.foreground-alt}

label-disconnected =  -.-.-.-
label-disconnected-foreground = ${colors.foreground-alt}

[module/bat0]
type = internal/battery
interval = 5

battery = BAT0
adapter = AC
full-at = 94

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
label-charging = %percentage%% (%time%)

animation-charging-0 = ÔâÉ
animation-charging-1 = ÔâÇ
animation-charging-2 = ÔâÅ
animation-charging-3 = ÔâÄ
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage%% (%time%)

ramp-capacity-0 = ÔâÑ
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ
ramp-capacity-foreground = ${colors.foreground-alt}

format-full-prefix = "Ôá¶ "
format-full-prefix-foreground = ${colors.foreground-alt}

label-full = %percentage%%

[module/bat1]
inherit = module/bat0

battery = BAT1

[module/temp]
type = internal/temperature
interval = 5

thermal-zone = 5

warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>
format-warn-underline = ${colors.alert}

label = %temperature%
label-warn = %temperature%!
label-warn-foreground = ${colors.alert}

ramp-0 = Ôãã
ramp-1 = Ôãä
ramp-2 = Ôãâ
ramp-3 = Ôãà
ramp-4 = Ôãá
ramp-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%Y-%m-%d"
date-alt = "%a, %d. %b, %Y"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = "Ôê∫ "
format-prefix-foreground = ${colors.foreground-alt}

label = %date% %time%

[module/compton]
type = custom/script
interval = 5

exec = ~/.config/polybar/compton.sh
click-left = ~/.config/polybar/compton-toggle.sh

[module/redshift]
type = custom/script
interval = 5

exec = ~/.config/polybar/redshift.sh
click-left = ~/.config/polybar/redshift-toggle.sh

